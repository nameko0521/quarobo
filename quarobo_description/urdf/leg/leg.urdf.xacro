<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:include filename="$(find quarobo_description)/urdf/material/material.urdf.xacro"/>

        <!-- === fixed === -->
    <xacro:macro name="leg_macro_fi" params="prefix parent mesh color *joint_origin">

        <joint name="${prefix}_joint" type="fixed">
            <parent link="${parent}"/>
            <child link="${prefix}_link"/>
            <xacro:insert_block name="joint_origin"/>
        </joint>

        <link name="${prefix}_link">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="0.020"/>
                <inertia
                    ixx="0.1" ixy="0" ixz="0"
                    iyy="0.1" iyz="0"
                    izz="0.1"/>
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://quarobo_description/meshes/origin_ros_quarobo_stlFiles/${mesh}"/>
                </geometry>
                <material name="${color}"/>
            </visual>
        </link>

    </xacro:macro>

    <!-- === revolute === -->
    <xacro:macro name="leg_macro_re" params="prefix parent mesh color *joint_origin *joint_axis">

        <joint name="${prefix}_joint" type="revolute">
            <parent link="${parent}"/>
            <child link="${prefix}_link"/>
            <xacro:insert_block name="joint_origin"/>
            <xacro:insert_block name="joint_axis"/>
            <limit lower="-2.61" upper="2.61" effort="1000" velocity="0.5"/>
            <dynamics damping="0.1"/>
        </joint>

        <link name="${prefix}_link">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="0.020"/>
                <inertia
                    ixx="0.1" ixy="0" ixz="0"
                    iyy="0.1" iyz="0"
                    izz="0.1"/>
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://quarobo_description/meshes/origin_ros_quarobo_stlFiles/${mesh}"/>
                </geometry>
                <material name="${color}"/>
            </visual>
        </link>

    </xacro:macro>

</robot>
